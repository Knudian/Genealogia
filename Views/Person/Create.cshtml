@using Genealogia.Data
@{
    ViewData["Title"] = "Create an Person";
}

@model Person;

<section class="container-fluid">
    <header class="row">
        <div class="col-xs-12">
            <h4 class="page-header">Create an Area</h4>
        </div>
    </header>
    <form asp-area="" asp-controller="Person" asp-action="Save" method="POST" id="createForm" class="form form-horizontal">
        <!-- Name -->
        <div class="form-group row">
            <label class="control-label col-xs-3" for="inputDefault">Person Name</label>
            <div class="col-xs-9">
                <input class="form-control" placeholder="Nom" asp-for="Name" id="inputName" type="text"/>
            </div>
        </div>
        <!-- Gender selection -->
        <div class="form-group row">
            <label class="control-label col-xs-3">Gender</label>
            <div class="col-xs-9">
                <label class="radio-inline">
                    <input type="radio" name="Gender" id="Gender1" value="Male"> Male
                </label>
                <label class="radio-inline">
                    <input type="radio" name="Gender" id="Gender2" value="Female"> Female
                </label>
            </div>
        </div>
        <!-- birth definition -->
        <div class="form-group row">
            <label class="control-label col-xs-3" for="inputDefault">Birth</label>
            <div class="col-xs-4">
                <input class="form-control" placeholder="Date of birth" asp-for="DateOfBirth" id="dateOfBirth" type="date"/>
            </div>
            <div class="col-xs-5">
                <input class="form-control" placeholder="Place of Birth" asp-for="PlaceOfBirth" id="placeOfBirth" type="text"/>
            </div>
        </div>
        <!-- death definition -->
        <div class="form-group row">
            <label class="control-label col-xs-3" for="inputDefault">Death</label>
            <div class="col-xs-4">
                <input class="form-control" placeholder="date of birth" asp-for="DateOfDeath" id="dateOfDeath" type="date"/>
            </div>
            <div class="col-xs-5">
                <input class="form-control" placeholder="Place of death" asp-for="Name" id="placeOfDeath" type="text"/>
            </div>
        </div>
        <!-- the button -->
        <div class="form-group row">
            <div class="col-xs-offset-3 col-xs-9">
                <button class="btn btn-primary btn-sm" type="submit">Validate</button>
            </div>
        </div>
    </form>
</section>